<%- include('../partials/header.ejs') %>
<%- include('../partials/navbarAuth.ejs') %>
<body>
    <div class="container">
        <hr>
        <% if(messages !== 'undefined' && messages.error) { %>
            <div class="alert alert-danger">
                <%= messages.error %>
            </div>
        <% } %>
        <div class="card">
            <div class="card-header">
                <h3 style="text-align: center;">Edição de produto</h3>
            </div>

            <div class="card-body">
                <form action="/product/update" method="post">
                    <input type="text" class="form-control" name="name" placeholder="Produto">
                    <br>
                    <input type="number" class="form-control" name="quantity" min="1" placeholder="Quantidade em estoque">
                    <br>
                    <input type="number" class="form-control" name="price" min="1" step="0.1" placeholder="Custo em R$">
                    <br>
                    <input type="hidden" name="productId" value="<%= product.id %>">
                    <br>
                    <input type="hidden" name="userId" value="<%= user.id %>">
                    <div class="d-grid gap-2">
                        <button class="btn btn-success">Atualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('../partials/footer.ejs') %>